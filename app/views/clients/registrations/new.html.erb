        <div class="wrapper-login">

            <div class="container">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <h3>Zarejestruj klienta</h3>
                    </div>
                    <div class="col-xs-6 col-xs-offset-3 text-center panel-outer">
                        <div class="panel">

                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= devise_error_messages! %>


                            <div class="form-group is-empty">
                              <label for="inputEmail" class="col-md-2 control-label">Email</label>
                              <div class="col-md-10">
                                <%= f.email_field :email, autofocus: true, id:"inputEmail", class: "form-control", placeholder: "Email" %>
                              </div>
                            </div>

                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>

                            <div class="form-group is-empty">
                              <label for="inputPass" class="col-md-2 control-label">Password</label>
                              <div class="col-md-10">
                                <%= f.password_field :password, autocomplete: "off", id:"inputPass", class: "form-control", placeholder: "Password" %>
                              </div>
                            </div>

                            <div class="form-group is-empty">
                              <label for="inputPass2" class="col-md-2 control-label">Password confirmation</label>
                              <div class="col-md-10">
                                <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputPass2", class: "form-control", placeholder: "Password confirmation" %>
                              </div>
                            </div>




                            <%= render(:partial => "form", :locals => {:f => f})%>

                            <div class="actions">
                              <%= f.submit "Sign up" %>
                            </div>
                          <% end %>

                          <%= render "devise/shared/links" %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
