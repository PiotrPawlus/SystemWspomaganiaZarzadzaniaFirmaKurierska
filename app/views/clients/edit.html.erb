<div class="">
  <h1>Edytuj: <%= @client.name %></h1>

  <%= link_to("Wróć", {:action => 'index'}) %>
  <%= form_for(:client, :url => {:action => "update", :id => @client.id}) do |field|%>
    <%= render(:partial => "form", :locals => {:field => field})%>
    <div >
      <%= submit_tag("Edytuj") %>
    </div>
  <% end %>
</div>
