        <div class="wrapper-login">
            <div class="container-fluid content">
                <div class="row">
                    <div class="content-main col-xs-12">
                        <div class="header col-xs-12 text-center">
                            <h3 style="margin: 25px 0px 30px 60px;">Paczki</h3>
                            <!-- <h5>Witamy w serwisie Koń Kurier</h5> -->
                        </div>
                        <div class="options newpack col-xs-12" style="height: 75%;">


                          <div class="">
                            <% if user_signed_in? %>
                              <p>
                                <%= link_to("Panel administratora", {:controller => 'user', :action => 'index'}, :class=>"")%>
                              </p>
                              <p>
                                <%= link_to("Dodaj paczkę", {:controller => 'packages', :action => 'new'})%>
                              </p>

                              <table>
                                <tr>
                                  <th>ID</th>
                                  <th>Waga</th>
                                  <th>Koszt</th>
                                  <th>Utworzono</th>
                                  <th>Aktualizowano</th>
                                  <th>Akcje</th>
                                </tr>
                                <% @packages.each do |package|%>
                                  <tr>
                                    <th><%= package.id %></th>
                                    <th><%= package.weight %></th>
                                    <th><%= package.cost %></th>
                                    <th><%= package.created_at %></th>
                                    <th><%= package.updated_at %></th>
                                    <th>
                                      <%= link_to("Pokaż", {:action => 'show', :id => package.id}, :class=>"")%>
                                      <%= link_to("Edycja", {:action => 'edit', :id => package.id}, :class=>"")%>
                                      <% if current_user.is_admin or current_user.is_dispather %>
                                        <%= link_to("Usuń", {:action => 'destroy', :id => package.id }, :class=>"")%>
                                      <% end %>

                                    </th>
                                  </tr>
                                <% end %>
                              <% end %>
                            </table>
                          </div>


                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>








