<% if user_signed_in? %>
  <div class="wrapper-login">
    <div class="container text-center">
      <div class="row">
        <div class="col-xs-12">
          <h3>Pracownicy</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 bg-all">
          <% if user_signed_in? and current_user.is_admin %>
            <%= link_to("Panel administratora", {:controller => 'user', :action => 'index'}, :class=>"btn btn-raised btn-default")%>
            <table class="table table-striped table-hover" style="margin-top: 20px; ">
              <tr class="success" style="color: black;">
                <th>ID</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th>Data urodzenia</th>
                <th>Utworzono</th>
                <th>Akcje</th>
              </tr>
              <% @users.each do |user|%>
                <tr>
                  <th><%= user.id %></th>
                  <th><%= user.name %></th>
                  <th><%= user.surname %></th>
                  <th><%= user.email %></th>
                  <th><%= user.birth_date.strftime("%m/%d/%y") %></th>
                  <th><%= user.created_at.strftime("%m/%d/%y %H:%M") %></th>
                  <% if current_user.id != user.id %>
                      <% if user.is_admin%>
                        <th class="pull-right">
                          <%= link_to("Nie Admin", {:action => 'updateAdmin', :id => user.id}, :class=>"btn btn-raised btn-danger")%>
                        </th>
                      <% else %>
                        <th class="pull-right">
                          <%= link_to("Admin", {:action => 'updateAdmin', :id => user.id}, :class=>"btn btn-raised btn-danger")%>
                        </th>
                      <% end %>

                      <% if user.is_dispather %>
                        <th class="pull-right">
                          <%= link_to("Nie Magazynier", {:action => 'updateDispatcher', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                        </th>
                      <% else %>
                        <th class="pull-right">
                          <%= link_to("Magazynier", {:action => 'updateDispatcher', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                        </th>
                      <% end %>

                      <% if user.is_courier %>
                        <th class="pull-right">
                          <%= link_to("Nie Kurier", {:action => 'updateCourier', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                        </th>
                      <% else %>
                        <th class="pull-right">
                          <%= link_to("Kurier", {:action => 'updateCourier', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                        </th>
                      <% end %>

                      <% if user.is_warehouse %>
                        <th class="pull-right">
                          <%= link_to("Nie Magazynier", {:action => 'updateWarehouse', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                        </th>
                      <% else %>
                        <th class="pull-right">
                          <%= link_to("Magazynier", {:action => 'updateWarehouse', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                        </th>
                      <% end %>
                  <% end %>
                </tr>
              <% end %>
            </table>
          <% else %>
            <h1>Nie jesteś zalogowany</h1>
            <%= link_to "Zarejestruj się", new_user_registration_path %> lub <%= link_to "Zaloguj się", new_user_session_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
