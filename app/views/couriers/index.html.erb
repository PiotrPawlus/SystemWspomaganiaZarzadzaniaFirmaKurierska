<div class="wrapper-login">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12">
        <h3>Kurierzy</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 bg-all">
        <% if user_signed_in? and current_user.is_admin %>
          <%= link_to("Panel administratora", {:controller => 'user', :action => 'index'}, :class=>"btn btn-raised btn-default")%><br>
          <% if user_signed_in? and current_user.is_admin or current_user.is_dispather %>
            <%= link_to("Nowy kurier", {:controller => 'couriers', :action => 'new'}, :class=>"btn btn-raised btn-success")%>
            <p>
              Ilość: <%= @couriers.size %>
            </p>
            <table class="table table-striped table-hover" style="margin-top: 20px; ">
              <tr class="success" style="color: black;">
                <th>ID</th>
                <th>Nazwa</th>
                <th>Obwód</th>
                <th>Utworzono</th>
                <th>Aktualizowano</th>
                <% if current_user.is_admin %>
                  <th>Akcje</th>
                <% end %>
              </tr>
              <% @couriers.each do |courier|%>
                <tr>
                  <th><%= courier.id %></th>
                  <th><%= courier.name %></th>
                  <th><%= courier.precinct %></th>
                  <th><%= courier.created_at %></th>
                  <th><%= courier.updated_at %></th>
                  <% if current_user.is_admin %>
                    <th>
                      <%= link_to("Pokaż", {:action => 'show', :id => courier.id}, :class=>"")%>
                      <%= link_to("Edycja", {:action => 'edit', :id => courier.id}, :class=>"")%>
                      <%= link_to("Usuń", {:action => 'destroy', :id => courier.id }, :class=>"")%>
                    </th>
                  <% end %>
                </tr>
              <% end %>
            </table>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
