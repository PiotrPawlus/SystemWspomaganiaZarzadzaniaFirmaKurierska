        <div class="wrapper-login">

            <div class="top-sidebar">
                <div class="pull-left">
                    <div class="logo-img">
                        <%= image_tag("logo.png", alt: "Logo Kurier") %>
                    </div>
                </div>
                <div class="pull-right">
                    <div class="login-name">
                    </div>
                </div>
            </div>

            <div class="container-fluid content">
                <div class="row">
                    <div class="sidebar">
                        <div class="sidebar-hide">
                            <i class="fa fa-bars open" aria-hidden="true"></i>
                            <p class="icon-desc">Rozwiń panel</p>
                        </div>
                        <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-bars " aria-hidden="true"></i>
                            <p class="icon-desc">Zwiń panel</p>
                        </div>
                        <a href="/">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-home" aria-hidden="true"></i>
                            <p class="icon-desc">Strona główna</p>
                          </div>
                        </a>
                        <a href="/clients">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-users" aria-hidden="true"></i>
                            <p class="icon-desc">Klienci</p>
                          </div>
                        </a>
                        <a href="/users">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-users" aria-hidden="true"></i>
                            <p class="icon-desc">Pracownicy</p>
                          </div>
                        </a>
                        <a href="/orders">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-list-ol" aria-hidden="true"></i>
                            <p class="icon-desc">Wszystkie zamówienia</p>
                          </div>
                        </a>
                        <a href="/packages">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-archive" aria-hidden="true"></i>
                            <p class="icon-desc">Paczki</p>
                          </div>
                        </a>
                        <a href="/warehouses">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-building" aria-hidden="true"></i>
                            <p class="icon-desc">Magazyny</p>
                          </div>
                        </a>
                        <a href="/dispatchers_office">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-building" aria-hidden="true"></i>
                            <p class="icon-desc">Dyspozytornie</p>
                          </div>
                        </a>
                        <a href="/couriers">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-user-secret" aria-hidden="true"></i>
                            <p class="icon-desc">Kurierzy</p>
                          </div>
                        </a>
                        <a href="/clients/sign_out">
                          <div class="sidebar-hide hidesidebar">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            <p class="icon-desc">Wyloguj się</p>
                          </div>
                        </a>
                    </div>
                    <div class="content-main col-xs-12">
                        <div class="header col-xs-12 text-center">
                            <h3 style="margin: 25px 0px 30px 60px;">Kurierzy</h3>
                            <!-- <h5>Witamy w serwisie Koń Kurier</h5> -->
                        </div>
                        <div class="options newpack col-xs-12" style="height: 75%;">


                          <div class="">
                            <% if user_signed_in? and current_user.is_admin or current_user.is_dispather %>
                              <%= link_to("Panel administratora", {:controller => 'user', :action => 'index'}, :class=>"")%>
                              <p>
                                Ilość: <%= @couriers.size %>
                              </p>
                              <%= link_to("Nowy kurier", {:controller => 'couriers', :action => 'new'}, :class=>"")%>
                              <table>
                                <tr>
                                  <th>ID</th>
                                  <th>Nazwa</th>
                                  <th>Obwód</th>
                                  <th>Utworzono</th>
                                  <th>Aktualizowano</th>
                                  <% if current_user.is_admin %>
                                    <th>Akcje</th>
                                  <% end %>
                                </tr>
                                <% @couriers.each do |courier|%>
                                  <tr>
                                    <th><%= courier.id %></th>
                                    <th><%= courier.name %></th>
                                    <th><%= courier.precinct %></th>
                                    <th><%= courier.created_at %></th>
                                    <th><%= courier.updated_at %></th>
                                    <% if current_user.is_admin %>
                                      <th>
                                        <%= link_to("Pokaż", {:action => 'show', :id => courier.id}, :class=>"")%>
                                        <%= link_to("Edycja", {:action => 'edit', :id => courier.id}, :class=>"")%>
                                        <%= link_to("Usuń", {:action => 'destroy', :id => courier.id }, :class=>"")%>
                                      </th>
                                    <% end %>
                                  </tr>
                                <% end %>
                              </table>
                            <% end %>
                          </div>


                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




